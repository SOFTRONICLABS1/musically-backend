# Database
DATABASE_URL=postgresql://postgres:your_password@your-aurora-endpoint/musically
DB_PASSWORD=your_secure_database_password

# AWS
AWS_REGION=us-east-1
AWS_SECRET_NAME=musically/jwt-secret

# OAuth - Google (Web Client)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth - Google (iOS Client)  
GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id

# Apple Sign In
APPLE_TEAM_ID=your_apple_team_id
APPLE_CLIENT_ID=your_apple_client_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=path_to_apple_private_key.p8

# App Settings
SECRET_KEY=your-local-development-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (for session management)
REDIS_URL=redis://localhost:6379/0

# CORS
FRONTEND_URL=http://localhost:3000
ALLOW_MOBILE_ORIGINS=true